<tr>
  <td><%= product.title %></td>
  <td><%= product.short_title %></td>
  <td><%= number_to_euro(product.price) %> </td>
  <td><%= product.plu %> </td>
  <td><%= product.product_group %></td>
  <td><%= product.product_type %></td>
  <td>
    <%= link_to edit_admin_product_path(product), method: :get do %>
      <%= fa_icon "edit 2x", class: 'icon-red' %>
    <% end %>
  <td>
      <%= link_to admin_product_path(product), method: :delete do %>
        <%= fa_icon "trash 2x", class: 'icon-red' %>
      <% end %>
</tr>
