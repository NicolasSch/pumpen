<div class="col-12">
  <%= render partial: 'shared/bill_reminder' %>
</div>

<p class="col-md-12 col-s-12">
  <a id="cart-link" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    <i class="fa fa-cart-arrow-down fa-lg"></i> Warenkorb anzeigen (<%= @cart.cart_items.count %>)
  </a>
</p>
<div class="collapse col-md-12 col-s-12" id="collapseExample">
  <%= render partial: 'cart' %>
</div>
<div class="col-md-12 col-s-12">
  <div class="card">
    <div class="card-header">
      <h4 class="card-title text-center"><%= t('products.headline')%></h3>
    </div>
    <div class="card-block">
      <div class="list-group">

        <%= smart_listing_controls_for(:products, {class: "form"}) do %>
        <div class="form-group filter input-append">
            <%= select_tag :filter, options_for_select(Product.all.map { |product| [product.product_group, product.product_group] }.uniq ),
                                    class: 'form-control select optinal',
                                    prompt: t('products.filter'),
                                    include_blank: false %>
        </div>
        <% end %>
        <%= smart_listing_render(:products) %>
    </div>
  </div>
</div>
