<!DOCTYPE html>
<html>
  <head>
    <title>Crossfit HH Tablist</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="flash-messages col-md-6">
          <% flash.each do |type, message| %>
            <%= content_tag(:div, message, class: "flash-messages__#{type}") %>
          <% end %>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
