<div class="col-12">
  <div class="card text-center">
    <div class="card-block">
      <h4 class="card-title"><%= t('add_tab.item.headline')%></h3>
      <h6 class="card-subtitle mb-2 text-muted"><%= t('add_tab.item.description') %></h6>
      <%= simple_form_for @tab do |f| %>
        <div>
          <%= f.input :product_id, label: false, as: :fake_select, collection: @products.map {|product| [product.title, product.id] } %>
          <%= f.submit t('add_tab.item.submit'), class: 'button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
