<div class="card text-center">
  <div class="card-header">
    <h4 class="card-title"><%= t('add_tab.item.headline')%></h4>
    <h6 class="card-subtitle mb-2 text-muted"><%= t('add_tab.item.description') %></h6>
  </div>
  <div class="card-block">
    <%= simple_form_for @tab, remote: true do |f| %>
      <div>
        <%= f.input :product_id,
                    include_blank: false,
                    label: false,
                    as: :fake_select,
                    collection: @products.map {|product| [product.title, product.id] } %>
        <%= f.submit t('add_tab.item.submit'), class: 'button' %>
      </div>
    <% end %>
  </div>
</div>
